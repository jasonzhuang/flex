package  {		import flash.display.Sprite;	import flash.events.Event;
		public class ScrollingListExample extends Sprite {				private var mouseScrollList:MouseScrollList;				public function ScrollingListExample() 		{			addEventListener(Event.ADDED_TO_STAGE, init);		}				private function init(e:Event):void        {            removeEventListener(Event.ADDED_TO_STAGE, init);			            mouseScrollList = new MouseScrollList(300, 400, false);            mouseScrollList.y = 0;            mouseScrollList.x = 0;			            this.addChild(mouseScrollList);        }	}}