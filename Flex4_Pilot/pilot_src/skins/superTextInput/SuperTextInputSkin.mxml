<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	minWidth="100" minHeight="22"
	alpha.disabled="0.5"
	blendMode="normal">
	
	<fx:Metadata>
		[HostComponent("components.superTextInput.SuperTextInput")]
	</fx:Metadata> 
	<!-- states -->
	<s:states>
		<s:State name="normal"/>
		<s:State name="prompting"/>
		<s:State name="disabled"/>
		<s:State name="disabledWithPrompt"/>
		<s:State name="normalWithPrompt"/>
	</s:states>
	
	<!-- bg --> 
	<s:Rect id="border" left="0" right="0" top="0" bottom="0" radiusX="3">
		<s:fill>
			<s:SolidColor id="bgFill" color="#ffffff" />
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke id="borderStroke" color="#333333" weight="1" />
		</s:stroke>
	</s:Rect>
	
	<!-- text -->
	<s:RichEditableText id="textDisplay" left="4" right="24" top="1" bottom="0"
						color="#333333"
						verticalAlign="middle" />
	
	<!-- prompt -->
	<s:Label id="promptDisplayLabel" left="4" right="4" top="1" bottom="0" includeIn="prompting"
			 color="#aaaaaa" fontStyle="italic"
			 maxDisplayedLines="1"
			 verticalAlign="middle" />
	
	<!-- clear button -->
	<s:Button id="clearButton" right="4" verticalCenter="0" excludeFrom="prompting"
			  skinClass="skins.superTextInput.SuperTextInputClearButtonSkin" />
</s:SparkSkin>