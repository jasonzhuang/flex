<?xml version="1.0" encoding="utf-8"?>
<s:Application
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:common="com.netease.view.common.*"
	initialize="init()"
	width="100%" height="100%" xmlns:layout="components.layout.*">
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			private function init():void {
				var testData:ArrayCollection = new ArrayCollection();
				for (var i:int = 0; i<100; i++) {
					testData.addItem(i);
				}
				pics.dataProvider = testData;
			}
		]]>
	</fx:Script>
	<s:layout>
		<s:VerticalLayout horizontalAlign="center"
						  paddingTop="40"/>
	</s:layout>
	<s:List id="pics" width="100%" height="100%"
				 itemRenderer="components.itemRenderer.SimpleRenderer"
				 >
		<s:layout>
			<layout:HorizontalMultilineLayout/>
		</s:layout>
	</s:List>
</s:Application>
