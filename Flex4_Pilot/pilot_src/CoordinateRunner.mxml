<?xml version="1.0" encoding="utf-8"?>
<s:Application
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	creationComplete="init()">
	<fx:Script>
		<![CDATA[
			private function recordOriginal():void {
				var rect:Rectangle = myPanel.getBounds(this);
				panelPropertyArea.text += rect.toString();
				panelPropertyArea.text += "\n";
			}
			
			private function rotationPanel():void {
				var matrix:Matrix = myPanel.transform.matrix;
				matrix.rotate(Math.PI  * 10 / 180);
				myPanel.transform.matrix = matrix;
				var rect:Rectangle = myPanel.getBounds(this);
				panelPropertyArea.text += rect.toString();
				panelPropertyArea.text += "\n";
			}
		]]>
	</fx:Script>
	<s:Panel id="myPanel" title="Hello" width="300" height="300" x="500" y="300">
		<s:VGroup width="200" height="200">
			<s:TextArea id="panelPropertyArea" width="100%" height="100%" text=""/>
		</s:VGroup>
	</s:Panel>
	<s:HGroup>
		<s:Button label="Original" click="recordOriginal()"/>
		<s:Button label="Rotation" click="rotationPanel()"/>
	</s:HGroup>
</s:Application>
